@using Microsoft.AspNetCore.Identity
@using RentACarApplication.Data
@inject SignInManager<ApplicationUser> SignInManager;



@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="text-center">
        <h1 class="display-4">Welcome To RentACar</h1>
    </div>
}
else
{
    <div class="text-center">
        <h1 class="display-4">Not logged in</h1>
    </div>
}

<div class="modal fade" id="UserLoginModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <partial name="_UserLoginPartial" />
</div>

<div class="modal fade" id="UserRegistrationModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <partial name="_UserRegistrationPartial">
</div>

@section Scripts
{
    <script src="~/js/UserRegister.js"></script>
    <script src="~/js/UserLogin.js"></script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

}  
